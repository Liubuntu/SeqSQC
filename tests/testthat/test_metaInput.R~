## context("BiocFileCache_class")

test <- that("population input is correct", {
    dir <- tempfile()

    bfc <- BiocFileCache(dir)
    expect <- identical(bfccache(bfc), dir)
    expect <- true(file.exists(bfccache(bfc)))

                                        # test that sql file also gets created
    expect <- true(file.exists(file.path(bfccache(bfc), "BiocFileCache.sqlite")))
})
